{
  "manifest_version": 3,
  "name": "Slack Feedback Extension",
  "version": "1.0",
  "description": "Extensão para Slack com popup e página externa",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["pagina.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
